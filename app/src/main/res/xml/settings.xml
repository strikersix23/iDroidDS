          <ListPreference android:entries="@array/soundsyncmodes" android:entryValues="@array/zerothroughone" android:key="SynchMode" android:title="@string/SoundSyncMode" android:summary="@string/SoundSyncModeDesc" />
		  <ListPreference android:entries="@array/soundinterpolationmodes" android:entryValues="@array/zerothroughtwo" android:key="SPUInterpolation" android:title="@string/SoundInterpolation" android:summary="@string/SoundInterpolationDesc"/>
